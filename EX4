//ISAC BARROS DE LIMA
import java.util.Scanner;

public class ex1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);


        System.out.print("Digite o plano de trabalho \nA \nB  \nC \n");
        String plano = scanner.nextLine().toUpperCase();

        System.out.print("Digite o salário atual: ");
        double salarioAtual = scanner.nextDouble();

        double novoSalario;


        switch (plano) {
            case "A":
                novoSalario = salarioAtual * 1.10;
                System.out.printf("Novo salário com 10%% de aumento: R$ %.2f%n", novoSalario);
                break;

            case "B":
                novoSalario = salarioAtual * 1.15;
                System.out.printf("Novo salário com 15%% de aumento: R$ %.2f%n", novoSalario);
                break;

            case "C":
                novoSalario = salarioAtual * 1.20;
                System.out.printf("Novo salário com 20%% de aumento: R$ %.2f%n", novoSalario);
                break;

            default:
                System.out.println("Plano inválido. Use A, B ou C.");
                break;
        }

        scanner.close();
    }
}
